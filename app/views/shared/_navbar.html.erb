<div class="navbar navbar-light navbar-lewagon">
  <div class="container-fluid">

    <%# Back button %>
    <a href="javascript:history.back()" class="navbar-brand">
      <img src="<%= asset_path('back.png') %>" alt="Back" id="back-icon">
    </a>

    <%# App title in navbar pointing to homepage %>
    <div class="title-navbar">
      <h2> <%= link_to "CookIt-up", root_path, class: "protest-riot"%></h2>
    </div>

    <%# Button for the dropdown menu %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <img src="<%= asset_path('menu.png')%>" id="navbar-toggler-icon">
    </button>

    <%# Content of the dropdown menu %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# Menu if user signed in %>
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Scan your fridge", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My favourites", favourites_recipes_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
          </li>

        <%# Menu if user not signed in %>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
